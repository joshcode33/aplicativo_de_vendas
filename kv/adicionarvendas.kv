<AdicionarVendas>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg3.png"
        Label:
            pos_hint: {"right": 1, "top": 1.35}
            size: 0.7, 0.2
            bold: True
            text: "Nenhuma Venda Adicionada"

    FloatLayout:
        pos_hint: {"right": 1, "top": 0.12}
        size_hint: 1, 0.12
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#FFFFFF")
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            pos_hint: {"right": 0.2, "top": 0.9}
            size_hint: 0.2, 0.8
            source: "icones/voltar2-removebg-preview.png"
            on_release: app.mudar_tela("homepage")