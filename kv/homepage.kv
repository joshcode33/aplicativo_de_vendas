<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg3.png"
        Label:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    source: "icones/botao_fino.png"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            text: "Total de vendas: R$1"
            id: label_total_vendas
            markup: True

        #lista de vendas
        ScrollView:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas
                size_hint_y: None
                spacing: 2, 2
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True

        #3 botoes de homepage
        GridLayout:
            rows: 1
            pos_hint: {"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#FFFFFF")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/add.png"
                on_release: app.mudar_tela("adicionarvendas")
            ImageButton:
                source: "icones/salesman.png"
                on_release: app.mudar_tela("listarvendas")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("ajustespage")